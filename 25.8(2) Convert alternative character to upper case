//To read character nd convert alternative letter to upper case
#include <stdio.h>
int main() 
{
   char str[20];
   int i;
   printf("Enter string: ");
   gets(str);
   for(i=0;str[i]!='\0';i++)
   {
       if(i%2==1)
     {
        str[i]=str[i]-32;
      }
   }
   puts(str);
    0;
}

/*Output:
Enter string: aditya
aDiTyA*/ 
